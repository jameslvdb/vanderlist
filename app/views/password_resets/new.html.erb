<section class="section">
  <h1 class="is-size-3">
    <strong>
      Reset Your Password
    </strong>
  </h1>
  <%= form_with model: @user, url: password_reset_path do |form| %>
    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.submit "Reset password" %>
    </div>
  <% end %>
</section>
